import tkinter as tk
from tkinter import messagebox
import random

class GuessGame:
    def __init__(self, root):
        self.root = root
        self.root.title("ðŸŽ¯ Number Guessing Game")
        self.root.geometry("400x400")
        self.root.config(bg="#e0f7fa")

        self.low = 1
        self.high = 100
        self.max_attempts = 10
        self.secret = None
        self.attempts = 0

        self.create_widgets()

    def create_widgets(self):
        tk.Label(self.root, text="ðŸŽ¯ Number Guessing Game", font=("Helvetica", 16, "bold"), bg="#e0f7fa", fg="#00796b").pack(pady=10)
        tk.Label(self.root, text="Select Difficulty Level:", bg="#e0f7fa", fg="#004d40").pack(pady=5)

        tk.Button(self.root, text="Easy (1-20)", width=20, command=lambda: self.start_game(1, 20, None)).pack(pady=2)
        tk.Button(self.root, text="Normal (1-100)", width=20, command=lambda: self.start_game(1, 100, 10)).pack(pady=2)
        tk.Button(self.root, text="Hard (1-500)", width=20, command=lambda: self.start_game(1, 500, 12)).pack(pady=2)

        self.info_label = tk.Label(self.root, text="", font=("Helvetica", 12), bg="#e0f7fa")
        self.info_label.pack(pady=15)

        self.entry = tk.Entry(self.root, font=("Helvetica", 12), justify="center", state="disabled")
        self.entry.pack(pady=5)

        tk.Button(self.root, text="Submit Guess", command=self.check_guess, bg="#00796b", fg="white", state="disabled").pack(pady=5)

        self.guess_btn = self.root.winfo_children()[-1]  # store the button to enable later
        self.hint_label = tk.Label(self.root, text="", bg="#e0f7fa", fg="#d32f2f")
        self.hint_label.pack(pady=10)

    def start_game(self, low, high, max_attempts):
        self.low, self.high, self.max_attempts = low, high, max_attempts
        self.secret = random.randint(low, high)
        self.attempts = 0

        self.info_label.config(text=f"Guess a number between {low} and {high}")
        self.hint_label.config(text="")
        self.entry.config(state="normal")
        self.guess_btn.config(state="normal")
        self.entry.delete(0, tk.END)

    def check_guess(self):
        guess_val = self.entry.get().strip()
        if not guess_val.isdigit():
            messagebox.showwarning("Invalid Input", "Please enter a valid number!")
            return

        guess = int(guess_val)
        self.attempts += 1

        if guess < self.low or guess > self.high:
            self.hint_label.config(text=f"Out of range! Enter between {self.low}-{self.high}")
            return

        if guess == self.secret:
            messagebox.showinfo("ðŸŽ‰ Congratulations!", f"You guessed it in {self.attempts} attempts!")
            self.reset_game()
            return
        elif guess < self.secret:
            self.hint_label.config(text="Too low! Try again.")
        else:
            self.hint_label.config(text="Too high! Try again.")

        # show hint closeness
        distance = abs(self.secret - guess)
        range_size = self.high - self.low + 1
        if distance <= max(1, range_size // 10):
            self.hint_label.config(text=self.hint_label.cget("text") + "\nðŸ”¥ You're very close!")
        elif distance <= max(1, range_size // 4):
            self.hint_label.config(text=self.hint_label.cget("text") + "\nðŸ™‚ You're somewhat close.")

        # check max attempts
        if self.max_attempts and self.attempts >= self.max_attempts:
            messagebox.showerror("ðŸ’€ Game Over", f"Out of attempts! The number was {self.secret}.")
            self.reset_game()

    def reset_game(self):
        self.entry.config(state="disabled")
        self.guess_btn.config(state="disabled")
        self.info_label.config(text="Select a difficulty level to start again.")
        self.hint_label.config(text="")

if __name__ == "__main__":
    root = tk.Tk()
    game = GuessGame(root)
    root.mainloop()
